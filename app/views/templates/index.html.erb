<div class="container mt-5">
  <h1 class="display-1">Templates</h1>

  <div id="template">
    <% @templates.each do |template| %>

      <div class="card flex-md-row mb-3 h-md-250 text-white bg-primary col-12 d-flex justify-content-between p-2 custom-shadow ">
        <div class="card-body d-flex flex-column align-items-start">
          <h5 class="card-title"><%= template.title %></h5>
          <p class="card-text"><%= template.description %></p>
        </div>
        <div class="card-body d-flex align-items-end justify-content-end align-items-center">
          <%= link_to edit_example_path(template.example) do %>
            <div class="btn my-btn-light">
              <i class="fa-regular fa-eye"></i>
            </div>
          <% end %>

          <%= link_to template_path(template), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } do %>
          <div class="btn my-btn-light">
              <i class="fa-regular fa-trash-can"></i>
            </div>
          <% end %>

          <%= link_to "Create text", new_template_output_path(template), :class => "btn my-btn-light"  %>
        </div>
      </div></>
    <% end %>
  </div>
</div>
