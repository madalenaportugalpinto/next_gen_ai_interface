<div class="container mt-5">
  <h1 class="display-1">Edit text</h1>
  <div class="row" data-controller="realtime-fields">
    <div class="col-6">
      <%= simple_form_for @output, data: { turbo: false } do |f| %>
        <%= render "form", f: f, output: @output %>
      <% end %>
    </div>

    <div class="col-6 card bg-light p-3 rounded">
      <%= content_with_fields example: @example, controller: 'realtime-fields', only_active: true  %>
    </div>
  </div>
</div>
