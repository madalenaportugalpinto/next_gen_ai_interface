<div class="container my-5 ">
  <h1 class="display-1" style="display:inline"><%= @template.title  %></h1>
  <h2 style="display:inline">
  <%= link_to edit_template_path(@template) do |f| %>
    <small>  <i class="fa-solid fa-pen"></i></small>
  <% end %>
  </h2>

  <h2 class="display-2"><%= @template.description %>
  <%= link_to edit_template_path(@template) do |f| %>
    <small>  <i class="fa-solid fa-pen"></i></small>
  <% end %>
  </h2>
</div>
<div class="container my-5" data-controller="checkbox-edit">
  <h2 class="display-2">Template preview</h2>
  <%= simple_form_for @example do |f| %>
    <div class="my-2">
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.text_field :content, class: 'form-control card col-12 bg-light custom-shadow p-3 rounded my-3 ' %>
    </div>
    <div class="my-5">
      <h2 class="display-2 ">Input data</h2>

  <%# display all example_fields as checkboxes %>
  <div class="d-flex flex-row">
  <%= f.fields_for :example_fields do |field_subform| %>
  <%= field_subform.hidden_field :id %>
    <%= field_subform.input :active, label: field_subform.object.key, input_html: { class: 'tag-selector' }, wrapper_html: { class: 'tag-item' } %>
  <% end %>
  </div>



    </div>
    <div class="d-flex gap-3">
      <%= f.submit class: 'btn btn-primary', value: "Save & use template" %>
      <%= link_to 'Back', template_path(@template), class: 'btn my-btn-light' %>
    </div>
  <% end %>
  </div>
  </div>


</div>
